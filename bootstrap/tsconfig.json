{
    "compilerOptions": {
        "target": "ES5",
        "module": "CommonJS",
        "strict": true,
        "importHelpers": true,
        "moduleResolution": "node",
        "experimentalDecorators": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "baseUrl": ".",
        "outDir": "build",
        "lib": [
            "ES5"
        ],
        "paths": {
            "@src/*": [
                "../src/*"
            ]
        }
    },
    "include": [
        "*.ts"
    ]
}